<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set solid color to transparent or white, based on preference -->
    <solid android:color="@android:color/transparent" />

    <!-- Set green stroke for the border -->
    <stroke
        android:width="2dp"
        android:color="@color/green" />

    <!-- Rounded corners for the button -->
    <corners android:radius="10dp" />

    <!-- Optional padding inside the button for better text alignment -->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="2dp"
        android:bottom="2dp" />
</shape>
